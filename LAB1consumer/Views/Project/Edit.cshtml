@model Project

<h2>Edit Project</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="name" class="control-label"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="deptName" class="control-label"></label>
        <select asp-for="deptName" class="form-control">
            <option value="">Select Department</option>
            @foreach (var dept in ViewBag.Departments)
            {
                <option value="@dept.name" data-id="@dept.id">@dept.name</option>

            }
        </select>
        <span asp-validation-for="deptName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="empNames" class="control-label"></label>
        <select asp-for="empNames" class="form-control" multiple>
            @foreach (var emp in ViewBag.Employees)
            {
                <option value="@emp.name" data-id="@emp.id" >@emp.name</option>
            }
        </select>
        <span asp-validation-for="empNames" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
