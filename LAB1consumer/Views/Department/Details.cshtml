@model Department

<h2>Department Details</h2>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
            Employees
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var emp in Model.empNames)
                {
                    <li>@emp</li>
                }
            </ul>
        </dd>
        <dt class="col-sm-2">
            Projects
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var project in Model.projectsNames)
                {
                    <li>@project</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.id })" class="btn btn-warning">Edit</a> |
    <a href="@Url.Action("Index")">Back to List</a>
</div>
