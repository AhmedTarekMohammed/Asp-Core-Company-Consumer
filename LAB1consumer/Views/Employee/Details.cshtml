@model Employee

<h2>Employee Details</h2>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @Model.salary
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.deptName
        </dd>
        <dt class="col-sm-2">
            Projects
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var project in Model.projectsNames)
                {
                    <li>@project</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.id })">Edit</a> |
    <a href="@Url.Action("Index")">Back to List</a>
</div>
